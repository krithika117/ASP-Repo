@model IEnumerable<OnlineMusicProject.Models.Genre>

@{
    ViewData["Title"] = "Index";
}



<div class="row">
    <div class="col-md-6">
        <h2 class="py-2">Genres</h2>
        <a class="btn btn-primary text-dark" asp-action="Create">+ Create Genre</a>
    </div>
</div>

<div class="row mt-4">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <div class="d-flex">


                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">✎</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">🗑</a>
                       
                    </div>
                </div>
            </div>
        </div>
    }
</div>