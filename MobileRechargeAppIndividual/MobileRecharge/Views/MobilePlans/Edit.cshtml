@model MobileRecharge.Models.MobilePlan

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h4 class="mt-3">Edit MobilePlan</h4>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group my-2">
                <label asp-for="ServiceProvider" class="control-label"></label>
                <input asp-for="ServiceProvider" class="form-control" />
                <span asp-validation-for="ServiceProvider" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="PlanName" class="control-label"></label>
                <input asp-for="PlanName" class="form-control" />
                <span asp-validation-for="PlanName" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Mode" class="control-label"></label>
                <input asp-for="Mode" class="form-control" />
                <span asp-validation-for="Mode" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="NoOfMonths" class="control-label"></label>
                <input asp-for="NoOfMonths" class="form-control" />
                <span asp-validation-for="NoOfMonths" class="text-danger"></span>
            </div>
            <div class="form-group my-1">
                <label asp-for="DataQuant" class="control-label"></label>
                <input asp-for="DataQuant" class="form-control" />
                <span asp-validation-for="DataQuant" class="text-danger"></span>
            </div> 
            <div class="form-group my-1">
                <label asp-for="ServiceProviderUPI" class="control-label"></label>
                <input asp-for="ServiceProviderUPI" class="form-control" />
                <span asp-validation-for="ServiceProviderUPI" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Save" class="btn btn-primary" /> <a asp-action="Index">Back to List</a>

            </div>

          
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
